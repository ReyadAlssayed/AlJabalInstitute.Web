@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="app-container">
    <main class="page-content">
        @Body
    </main>

    <BottomNav />
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("hideAppLoader");
        }
    }
}

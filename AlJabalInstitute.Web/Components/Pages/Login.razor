@page "/"
@layout AuthLayout
@rendermode InteractiveServer

<div class="student-auth-page">

    <div class="student-auth-card">

        <!-- HERO (TOP CURVES) -->
        <div class="student-auth-hero">

            <div class="hero-content">
                <div class="institute-name">معهد الجبل العالي</div>
                <div class="hero-subtitle">بوابة الطلبة</div>
            </div>

            <!-- DOUBLE WAVES (smooth) -->
            <svg class="hero-wave wave-back" viewBox="0 0 1440 320" preserveAspectRatio="none" aria-hidden="true">
                <path d="M0,192 C240,96 480,256 720,160 C960,64 1200,224 1440,128 L1440,320 L0,320 Z"></path>
            </svg>

            <svg class="hero-wave wave-front" viewBox="0 0 1440 320" preserveAspectRatio="none" aria-hidden="true">
                <path d="M0,224 C240,288 480,160 720,224 C960,288 1200,256 1440,208 L1440,320 L0,320 Z"></path>
            </svg>

        </div>

        <!-- BODY -->
        <div class="student-auth-body">

            <!-- NATIONAL ID -->
            <div class="field">
                <label>الرقم الوطني</label>
                <input placeholder="أدخل الرقم الوطني"
                       inputmode="numeric"
                       maxlength="20" />
            </div>

            <!-- PASSWORD -->
            <div class="field">
                <label>كلمة السر</label>
                <input type="password"
                       placeholder="أدخل كلمة السر"
                       maxlength="50" />
                <button type="button" class="field-action">إظهار</button>
            </div>

            <!-- LOGIN BUTTON -->
            <button class="primary-btn">
                تسجيل الدخول
            </button>

            <!-- NOTE LINK (instead of noisy block) -->
            <div class="note-link-wrap">
                <span class="note-hint">هل واجهتك مشكلة؟</span>

                <!-- pure CSS toggle -->
                <input id="noteToggle" class="note-toggle" type="checkbox" />
                <label class="note-open" for="noteToggle">إرسال ملاحظة</label>

                <!-- MODAL -->
                <div class="note-modal">
                    <label class="note-backdrop" for="noteToggle"></label>

                    <div class="note-dialog" role="dialog" aria-modal="true">
                        <div class="note-dialog-head">
                            <div class="note-title">إرسال ملاحظة</div>
                            <label class="note-close" for="noteToggle" aria-label="إغلاق">×</label>
                        </div>

                        <div class="note-dialog-body">
                            <textarea placeholder="اكتب ملاحظتك هنا ..."
                                      rows="4"></textarea>

                            <button type="button" class="note-btn">
                                إرسال
                            </button>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>
